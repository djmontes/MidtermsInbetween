<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HowToPlay">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tablebackground"
            android:scaleType="fitXY"
            />
    <TextView
            android:text="How to Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LBL_HowtoPlay"
            android:textColor="#FFFFFF"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
    />
    <TextView
            android:text="At the start of the game the player is given a specific
amount of money which is 3000PHP the Player has to click the 'Start' button in order to proceed. The player must bet some of his/her money in order to play
The AI will produce random cards to play which will indicate whether the player wins or loses. The option 'Higher'/'Lower' will appear
when both random cards has the same value and the player must select either Higher or Lower."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LBL_Instructions"
            android:layout_below="@+id/LBL_HowtoPlay"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="italic|bold"
            android:fontFamily="sans-serif-thin"
    />
    <Button
            android:text="Main Menu"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/BTN_mainmenu"
            android:background="@drawable/custom_htpbutton"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/LBL_Instructions"
    />



</RelativeLayout>