<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/btnPlayEnabled" android:state_pressed="true" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <solid android:color="#5A211E"/>
            <corners
                    android:topLeftRadius="30dp"
                    android:topRightRadius="30dp"
                    android:bottomLeftRadius="10dp"
                    android:bottomRightRadius="10dp"
            />
            <stroke android:width="10px" android:color="#C0C0C0"/>
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <solid android:color="#FF6961"/>
            <corners
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp"
                    android:bottomLeftRadius="50dp"
                    android:bottomRightRadius="50dp"
            />
            <stroke android:width="10px" android:color="#000000"/>
        </shape>
    </item>
</selector>